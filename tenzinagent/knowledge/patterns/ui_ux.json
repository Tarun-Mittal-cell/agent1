{
  "design_systems": {
    "modern": {
      "colors": {
        "primary": "#0070f3",
        "secondary": "#7928ca",
        "success": "#0070f3",
        "error": "#ff0000",
        "warning": "#f5a623",
        "background": "#ffffff",
        "text": "#000000"
      },
      "typography": {
        "fonts": {
          "sans": "Inter, system-ui, -apple-system, sans-serif",
          "mono": "Menlo, Monaco, Lucida Console, monospace"
        },
        "sizes": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem",
          "4xl": "2.25rem"
        }
      },
      "spacing": {
        "0": "0",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem",
        "16": "4rem"
      },
      "components": {
        "button": {
          "base": {
            "padding": "0.5rem 1rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.875rem",
            "fontWeight": "500",
            "transition": "all 0.2s"
          },
          "variants": {
            "primary": {
              "backgroundColor": "#0070f3",
              "color": "#ffffff",
              "hover": {
                "backgroundColor": "#0060df"
              }
            },
            "secondary": {
              "backgroundColor": "#7928ca",
              "color": "#ffffff",
              "hover": {
                "backgroundColor": "#6922b6"
              }
            }
          }
        },
        "input": {
          "base": {
            "padding": "0.5rem 0.75rem",
            "borderRadius": "0.375rem",
            "borderWidth": "1px",
            "borderColor": "#e2e8f0",
            "fontSize": "0.875rem"
          },
          "focus": {
            "borderColor": "#0070f3",
            "boxShadow": "0 0 0 3px rgba(0, 112, 243, 0.1)"
          }
        },
        "card": {
          "base": {
            "backgroundColor": "#ffffff",
            "borderRadius": "0.5rem",
            "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
            "padding": "1.5rem"
          }
        }
      }
    }
  },
  "layouts": {
    "responsive": {
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "grid": {
        "columns": 12,
        "gap": "1rem",
        "container": {
          "padding": "1rem",
          "maxWidth": {
            "sm": "640px",
            "md": "768px",
            "lg": "1024px",
            "xl": "1280px"
          }
        }
      }
    }
  },
  "animations": {
    "transitions": {
      "default": "all 0.2s ease",
      "slow": "all 0.3s ease",
      "fast": "all 0.1s ease"
    },
    "keyframes": {
      "fadeIn": {
        "from": {
          "opacity": "0"
        },
        "to": {
          "opacity": "1"
        }
      },
      "slideIn": {
        "from": {
          "transform": "translateY(20px)",
          "opacity": "0"
        },
        "to": {
          "transform": "translateY(0)",
          "opacity": "1"
        }
      }
    }
  },
  "best_practices": {
    "accessibility": [
      "Use semantic HTML elements",
      "Provide alt text for images",
      "Ensure sufficient color contrast",
      "Support keyboard navigation",
      "Add ARIA labels where needed"
    ],
    "responsive": [
      "Mobile-first approach",
      "Use relative units (rem, em)",
      "Implement responsive images",
      "Test on multiple devices",
      "Use CSS Grid and Flexbox"
    ],
    "performance": [
      "Optimize images",
      "Lazy load assets",
      "Minimize HTTP requests",
      "Use code splitting",
      "Implement caching"
    ]
  }
}