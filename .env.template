# LLM API Keys
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
HUGGINGFACE_TOKEN=your-hf-token-here  # Optional

# Model Configuration
DEFAULT_MODEL=gpt-4-1106-preview  # or claude-3-opus-20240229
FALLBACK_MODEL=gpt-3.5-turbo
LOCAL_MODEL=mistralai/Mistral-7B-Instruct-v0.2  # Optional

# Knowledge Base Configuration
KNOWLEDGE_BASE_PATH=./knowledge
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_SIMILARITY_THRESHOLD=0.8

# Tool Configuration
ENABLE_SECURITY_SCANNING=true
ENABLE_PERFORMANCE_PROFILING=true
MAX_FILE_SIZE_MB=10
PARALLEL_TOOL_EXECUTION=true

# Deployment Configuration
DEFAULT_CLOUD_PROVIDER=aws  # or azure, gcp
DOCKER_REGISTRY=your-registry-here
KUBERNETES_NAMESPACE=tenzin-agent

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
LOG_FILE=tenzin-agent.log

# Performance Configuration
BATCH_SIZE=4
MAX_PARALLEL_REQUESTS=8
CACHE_SIZE_MB=1024
ENABLE_GPU=true